# Database Configuration
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_SERVER=your_db_server.database.windows.net
DB_DATABASE=your_database_name
DB_PORT=1433

# Frontend Origin (for CORS)
FRONTEND_ORIGIN=http://localhost:5173

# Azure Notification Hubs (Optional)
ANH_CONNECTION_STRING=your_anh_connection_string
ANH_HUB_NAME=your_hub_name

# Azure Communication Services Email (Optional)
ACS_EMAIL_CONNECTION_STRING=your_acs_email_connection_string
ACS_EMAIL_SENDER=your_email_sender@yourdomain.com

# Azure Communication Services SMS (Optional)
ACS_CONNECTION_STRING=your_acs_connection_string
ACS_FROM_PHONE=+1234567890

# Twilio SMS (Optional - alternative to Azure SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
